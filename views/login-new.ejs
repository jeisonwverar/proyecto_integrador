<%-include('./partials/header.ejs')%>
<main class="main-login">
    <form action="/new" method="POST" class="user-login"    >
        <h1 class="user-login__title">REGISTRATE</h1>
        <div class="user-login__container">
            <label for="username">User</label>
            <input type="text" id="username" name="username">
        </div>
        <div class="user-login__container">
            <label for="password">Password</label>
            <input type="password" id="password" name="password">
        </div>
        <div class="user-login__container">
            <button type="submit" class="user-login__container-btn">Registrarse</button>
            <a href="/login" class="user-login__container-cta">Ingresar</a>
        </div>
    </form>
</main>
<%-include('./partials/footer.ejs')%>