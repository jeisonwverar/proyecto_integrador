<%-include('./partials/header.ejs')%>
<main class="main-contact">
    <h1 class="main-contact-title">Contactanos</h1>
    <form action="get" class="contact">
        <section class="contact__section-one"> 
            <fieldset class="contact__section-one-fieldset">
                <legend class="contact__section-one-legend">Datos Personales</legend>
                <div class="contact__section-one-div">
                    <label for="name">Nombre: <sup>*</sup></label>
                    <input id="name"  name="name" autofocus required>
                </div>
                <div class="contact__section-one-div">
                    <label for="last-name">Apellido: <sup>*</sup></label>
                    <input id="last-name"  name="last-name" required>
                </div>
                <div class="contact__section-one-div">
                    <label for="Document">Documento: <sup>*</sup></label>
                    <input id="Document" type="number" required  minlength="2" maxlength="9" >
                </div> 
                <div class="contact__section-one-div">
                    <label for="about">sugerencias:</label>
                    <textarea name="about" id="about" cols="30" rows="10"></textarea>   
                </div>
                <div class="contact__section-one-div">
                <p class=" contact__section-one-div-p">Sexo: <sup>*</sup></p>
                    <input type="radio" name="sexo" id="femenino" >
                    <label for="femenino"> femenino </label>
                    <input type="radio" name="sexo" id="masculino" value="masculino" >
                    <label for="masculino">masculino</label>
                    <input type="radio" name="sexo" id="otro" value="otro"  required>
                    <label for="otro">Otro</label>
                </div>
        </fieldset>
        </section>
        </div>
        <section class="contact__section-two">
        <fieldset class="contact__section-two-fieldset">
            <legend class="contact__section-two-legend"> Datos de Contacto</legend>
             <div class="contact__section-two-div">
                <label for="telephone">Teléfono:<sup>*</sup></label>
                <input type="text" id="telephone" placeholder="Código de área y número" pattern="[+][0-9]{2} [0-9]{3} [0-9]{3} [0-9]{4}" title="ejemplo:+57 312 321 14546" required >
            </div>
            <div class="contact__section-two-div">
                <label for="email">Dirección de correo electrónico <sup>*</sup></label>
                <input type="email" id="email"  placeholder="Ej: mail@gmail.com" required> 
            </div>       
        </fieldset>
        </section>
        <section class="contact__section-three">
            <div class="contact__section-three-checkbox1" >
                <input type="checkbox" name="acept" id="acept" required>
                <label for="acept">Acepto las condiciones <sup>*</sup></label> 
            </div>
            <div class="contact__section-three-checkbox2">
                <input type="checkbox" name="new" id="new">
                <label for="new">Deseo recibir novedades</label>
                <p class="contact__section-three-paragraph">  <strong>*</strong>:campo obilgatorio.</p>
            </div>
            <div class="contact__section-three-button">
                <input class="contact__section-three-button-submit" type="submit" value="Enviar">
                <input class="contact__section-three-button-reset"  type="reset" value="Restablecer">
            </div>
        </section>
    </form>
</main>


<%-include('./partials/footer.ejs')%>