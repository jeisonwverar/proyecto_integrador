<%-include('./partials/header.ejs')%>
<div class="dashboard">
    <h1 class="dashboard__title">Dashboard.</h1>
    
    <a href="/alta" class="dashboard__cta">Nuevo Producto <img src="/img/plus.svg" alt="plus" ></a>
</div>
<div class="dashboard__container">
   <% product.forEach(prod => { %>
        <div class="dashboard__card">
            <article class="dashboard__article">
                <div class="dashboard__article-figure">
                    <img src="<%= prod.image %>" alt="<%=prod.cloudinary_id %>"  height="200" width="250" >
                </div>
                <div class="dashboard__content">
                   <h2 class="dashboard__content-heading"><%=prod.name%></h2>
                   <p class="dashboard__content-brand"><%=prod.brand%></p> 
                   <p class="dashboard__content-price"> <%=prod.price %></p> 
                   <div class="dashboard__content-text">
                       <h3><%=prod.descriptionShort %></h3>
                   </div>
                </div>
            </article>
            <form action="/<%=prod.id%>?_method=DELETE" method="POST"  class="dashboard__form"> 
                <button  type="submit" class="dashboard__form-submit" >eliminar</button>
              </form>

         </div>
        <% })%>
        
   
</div>
<%-include('./partials/footer.ejs')%>